$(function() {
	$("#sortable1, #sortable2").sortable({
		placeholder : "ui-state-highlight",
		connectWith : ".connectedSortable",
	}).disableSelection();
	
	$("#sortable1").sortable({
			update :  function() { page_sort() },
			// remove :  function() {  },
			// receive : function() {  }
		}).disableSelection();
	
	function page_sort() {
		// alert($('#sortable1').sortable('serialize') + "&menu_id=" + $("#page_sorting").data("menu-id"));
		$.post("/admin/menus/page_sort", $('#sortable1').sortable('serialize') + "&menu=" + $("#page_sorting").data("menu-id"));
	}
});
