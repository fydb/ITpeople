<%= stylesheet_link_tag "admin/flash_messages.css", "admin/markitup_custom.css" %>

<div id="flash_message"></div>

	<%= form_for([:admin, @page], :remote => true, :html => { :class => "update_ajax_page form_validations" }) do |f| %>
	  <% if @page.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
	      <ul>
	      <% @page.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  	<div class="content-preview">
	  		<%= raw @page.content %>
	  	</div>

	<div>
    <%= link_to "Back to Admin Panel", admin_pages_path, :class => "btn btn-primary" %>
    <%= f.cktext_area :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
		<%= f.submit "Update Content", :class => "alt_btn update" %>
		<div style="clear: both"></div>
	</div>

	<% end %>


